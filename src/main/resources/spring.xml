<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"> <!-- bean definitions here -->

        <bean  id="Address" class="org.example.Address" >
            <property name="city"  value="Houston" />
            <property name="state"  value="Texas" />
            <property name="country"  value="US" />
            <property name="zipcode"  value="77099" />
        </bean>

       <bean id="dadPhone" class="org.example.Phone">
           <property name="mob" value="12345678" />
       </bean>
        <bean id="momPhone" class="org.example.Phone">
            <property name="mob" value="05847363" />
        </bean>
        <bean id="studentPhone" class="org.example.Phone">
            <property name="mob" value="073635" />
        </bean>


        <bean id="Student" class="org.example.Student" >
            <constructor-arg index="0" type="int" value="32" />
            <constructor-arg index="1" value="John" />
            <constructor-arg index="2">
                <list>
                    <ref bean="dadPhone" />
                    <ref bean="momPhone" />
                    <ref bean="studentPhone" />
                </list>
            </constructor-arg>

            <constructor-arg index="3" ref="Address" />


        </bean>

</beans>